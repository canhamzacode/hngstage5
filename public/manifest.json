{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Help Me Out",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "desktopCapture",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "32": "logo.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ]
}